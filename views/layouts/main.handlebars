<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/css/reset.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />
    <title>Tech Blog</title>
  </head>
  <body>
    <nav class='navbar'>
      <div class='container-fluid'>
        <h1 class='m-0'><a href='/' class='text-decoration-none'>Tech Blog</a></h1>

        <form class='d-flex align-items-center'>
          {{#if logged_in}}
            <a href='/dashboard' class='text-decoration-none px-2'>Dashboard</a>
            <a href='/' class='text-decoration-none px-2'>Home</a>
            <button class='btn btn-secondary px-2' id='logout'>Logout</button>
          {{else}}
            <a href='/login' class='text-decoration-none'>Login</a>
          {{/if}}
        </form>
      </div>
    </nav>

    <div class='flex-column justify-space-around'>

      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
</html>