<article>
  <a href="/dashboard" class=""> &larr; back to dashboard</a>
  <h2 class="mt-5">edit post</h2><hr>
  <form class="edit-post-form form">
    <div class="mb-3">
        <label for="post-title" class="form-label">Post Title</label>
      <input class="form-control" name="post-title" type="text" value="{{post.post_header}}" />
    </div>
    <div class="mb-3">
        <label for="post-content" class="form-label">Post Content</label>
      <input class="form-control" name="post-content" type="text" value="{{post.post_content}}" />
    </div>
    <div class="mb-3">
      <a href="/posts/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">save post</button>
    <button type="button" class="btn btn-secondary">delete post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/comment.js"></script>